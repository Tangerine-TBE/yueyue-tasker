    <application
        android:name=".App"
        android:allowBackup="true"
        android:extractNativeLibs="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/logo"
        android:label="${appName}"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:label, android:allowBackup">
        <activity
            android:configChanges="orientation"
            android:name=".activity.VerificationActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.Transparent"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity             android:configChanges="orientation"

            android:name=".activity.SplashActivity"
            android:exported="false"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
        </activity>
        <activity             android:configChanges="orientation"

            android:name=".activity.LoginActivity"
            android:exported="false"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/Theme.YUEYUE">

            <!-- 这里需要额外处理软键盘 -->
        </activity>
        <activity             android:configChanges="orientation"

            android:name=".activity.MainActivity"
            android:exported="false"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.YUEYUE" />
        <activity             android:configChanges="orientation"

            android:name=".activity.AccessibilityCheckActivity"
            android:exported="false"
            android:launchMode="standard"
            android:noHistory="true"
            android:theme="@style/Theme.YUEYUE" />
        <activity             android:configChanges="orientation"

            android:name=".activity.CheckUpdateActivity"
            android:exported="false"
            android:launchMode="standard"
            android:noHistory="true"
            android:theme="@style/Theme.YUEYUE" />

        <provider
            android:name="cn.com.auto.thkl.fileprovider.AppFileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <receiver
            android:name=".timing.work.AlarmManagerProvider$AlarmManagerBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.stardust.autojs.action.check_task" />
                <action android:name="com.android.deskclock.ALARM_ALERT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".service.AccessibilityService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:stopWithTask="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
    </application>

</manifest>