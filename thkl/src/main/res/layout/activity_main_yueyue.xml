<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="match_parent">

    <TextView
        style="@style/yueyue_main"
        android:id="@+id/item1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="?android:actionBarSize"
        android:text="用户ID:"
        />
    <TextView
        style="@style/yueyue_main"
        app:layout_constraintStart_toEndOf="@id/item1"
        app:layout_constraintTop_toTopOf="@id/item1"
        app:layout_constraintBottom_toBottomOf="@id/item1"
        android:text="100344"
        android:textStyle="bold"
        android:id="@+id/tv_user_id"
       />
    <TextView
        style="@style/yueyue_main"
        android:id="@+id/item2"
        app:layout_constraintStart_toStartOf="@id/item1"
        app:layout_constraintTop_toBottomOf="@id/item1"
        android:text="用户名:"
       />
    <TextView
        style="@style/yueyue_main"
        app:layout_constraintStart_toEndOf="@id/item2"
        app:layout_constraintTop_toTopOf="@id/item2"
        app:layout_constraintBottom_toBottomOf="@id/item2"
        android:text="12345678900"
        android:textStyle="bold"
        android:id="@+id/tv_user_phone"
        />
    <TextView
        style="@style/yueyue_main"
        android:id="@+id/item3"
        app:layout_constraintStart_toStartOf="@id/item2"
        app:layout_constraintTop_toBottomOf="@id/item2"
        android:text="应用ID:"
        />
    <TextView style="@style/yueyue_main"
        app:layout_constraintStart_toEndOf="@id/item3"
        app:layout_constraintTop_toTopOf="@id/item3"
        app:layout_constraintBottom_toBottomOf="@id/item3"
        android:textStyle="bold"
        android:text="1970-1-1 00:00:00"
        android:id="@+id/tv_user_date"/>
    <Button
        android:text="开始脚本"
        android:visibility="gone"
        android:id="@+id/btn_script_start"
        app:layout_constraintTop_toBottomOf="@id/tv_user_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="退出登录"
        android:id="@+id/btn_login_out"
        app:layout_constraintTop_toBottomOf="@id/btn_script_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>