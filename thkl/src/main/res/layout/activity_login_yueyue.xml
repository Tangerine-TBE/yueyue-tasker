<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">
    <TextView
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_account"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:text="账号:"
        android:id="@+id/tv_account"
        style="@style/yueyue_main"
        android:textStyle="normal"
        />
    <EditText
        android:inputType="textEmailAddress"
        style="@style/yueyue_main"
        android:textStyle="normal"
        android:id="@+id/et_account"
        app:layout_constraintTop_toTopOf="@id/tv_account"
        app:layout_constraintBottom_toBottomOf="@id/tv_account"
        android:ems="12"
        android:maxLength="11"
        app:layout_constraintStart_toEndOf="@id/tv_account"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_cipher"
        app:layout_constraintTop_toBottomOf="@id/tv_account"
        android:text="密码:"
        android:id="@+id/tv_cipher"
        style="@style/yueyue_main"
        android:textStyle="normal"
        />
    <EditText
        style="@style/yueyue_main"
        android:textStyle="normal"
        android:id="@+id/et_cipher"
        app:layout_constraintTop_toTopOf="@id/tv_cipher"
        app:layout_constraintBottom_toBottomOf="@id/tv_cipher"
        android:ems="12"
        android:maxLength="11"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@id/tv_cipher"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/tv_cipher"
        app:layout_constraintEnd_toEndOf="@id/et_cipher"
        android:text="登录"
        app:layout_constraintTop_toBottomOf="@id/tv_cipher"
        android:layout_height="wrap_content"/>

