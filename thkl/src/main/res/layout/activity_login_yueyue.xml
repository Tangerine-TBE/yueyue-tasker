<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/icon_login_header"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/iv_icon_login_header"
        android:layout_height="144.5dp"/>
    <ImageView
        android:id="@+id/iv_icon_login_logo"
        android:layout_marginTop="100.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/icon_login_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <TextView
        android:text="账号"
        android:id="@+id/tv_account"
        app:layout_constraintTop_toBottomOf="@id/iv_icon_login_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="52.5dp"
        android:layout_marginStart="15dp"
        android:textSize="12sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="25dp"
        android:layout_height="16.5dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_account"
        android:layout_width="0dp"
        android:id="@+id/layout_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15.5dp"
        android:background="@drawable/shape_bg_background"
        android:layout_marginStart="15.5dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_account"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_account"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="number"
            android:id = "@+id/et_account"
            app:layout_constraintStart_toEndOf="@id/iv_account"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@null"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:hint="请输入账号"
            android:layout_marginStart="5.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:text="密码"
        android:id="@+id/tv_cipher"
        app:layout_constraintTop_toBottomOf="@id/layout_account"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:textSize="12sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="25dp"
        android:layout_height="16.5dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_cipher"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cipher"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15.5dp"
        android:background="@drawable/shape_bg_background"
        android:layout_marginStart="15.5dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_cipher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_cipher"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="textPassword"
            android:id = "@+id/et_cipher"
            app:layout_constraintStart_toEndOf="@id/iv_cipher"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@null"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:layout_marginStart="5.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@id/layout_cipher"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_bg_button"
        android:text="登录"
        android:textColor="@android:color/white"
        android:layout_width="344.42dp"
        android:layout_height="45dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>